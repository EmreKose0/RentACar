@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Araç Özelliği Girişi</h4>
                        <form method="post" asp-action="CreateFeature">
                           
                                <div class="form-group">
                                    <label for="exampleInputName">Özellik Adı</label>
                                    <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Özellik Adı Girişi Yapınız..">
                                </div>
                            
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-body-->
        </div>

    </div> <!-- container-fluid -->
</div> 






