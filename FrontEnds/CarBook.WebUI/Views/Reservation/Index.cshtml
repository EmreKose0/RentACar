@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Araç Rezervasyon Formu </h3>
        <br/>
            <input type="hidden" value="@ViewBag.v3"  asp-for="CarID">
        <div class="form-group">
            <label>Adınız</label>
            <input type="text" class="form-control"  asp-for="Name">
        </div>
        <div class="form-group">
            <label>SoyAdınız</label>

            <input type="text" class="form-control"  asp-for="Surname">
        </div>
        <div class="form-group">
            <label>Email Adresiniz</label>

            <input type="text" class="form-control"  asp-for="Email">
        </div>
        <div class="form-group">
            <label>Telefon Numaranız</label>

            <input type="text" class="form-control"  asp-for="Phone">
        </div>
        <div class="form-group">
            <label>Teslim Alınacak Lokasyon</label>
            <br />

            @Html.DropDownListFor(y => y.PickUpLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control;" })
        </div>
        <div class="form-group">
            <label>Teslim Edilecek Lokasyon</label>
            <br />
            @Html.DropDownListFor(y => y.DropOffLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control;" })
        </div>
        <div class="form-group">
            <label>Yaşınız</label>

            <input type="text" class="form-control"  asp-for="Age">
        </div>
        <div class="form-group">
            <label>Ehliyet Yılınız</label>

            <input type="text" class="form-control"  asp-for="DriverLicenseYear">
        </div>

        <div class="form-group">
            <label>Varsa Eklemek İstedikleriniz</label>

            <textarea asp-for="Description" cols="30" rows="7" class="form-control" ></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>
