@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca Ait Özellikler Listesi</h4>
                        <p class="card-subtitle mb-4">
                             Aracların Özellik Bilgiliri Düzenleyebilirsiniz.
                        </p>
                        <form method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type ="hidden" asp-for="@Model[i].carFeatureID"/>
                                    <input type="hidden" asp-for="@Model[i].featureName" />
                                    <input type="checkbox" asp-for="@Model[i].available" class="form-check-input"/>
                                    <label class="form-check-label" for= "@Model[i].available">@Model[i].featureName</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-success">Kaydet</button>
                        </form> 
                        
                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>

        </div>


    </div> <!-- container-fluid -->
</div>




