@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazar Bilgisi Güncelle</h4>
                        <form method="post" asp-action="UpdateAuthor">
                            <input type="hidden" asp-for="AuthorID" />
                            <div class="form-group">
                                <label for="exampleInputName">Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ad Soyad Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDesc" asp-for="Desciption" placeholder="Açıklama Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImgUrl">Yazar Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImgUrl" asp-for="ImageUrl" placeholder="Yazar Görsel Url Bilgisi Giriniz..">
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light">Yazarı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-body-->
        </div>

    </div> <!-- container-fluid -->
</div>

