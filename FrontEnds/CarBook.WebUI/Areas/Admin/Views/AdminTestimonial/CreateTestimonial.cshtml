@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Bilgisi Girişi</h4>
                        <form method="post" asp-action="CreateTestimonial">

                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans Ad Soyad Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Unvanı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImg">Referans Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImg" asp-for="ImageUrl" placeholder="Görsel URL Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImg">Referans Görsel</label>
                                <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Yorum Girişi Yapınız.."></textarea>
                            </div>




                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-body-->
        </div>

    </div> <!-- container-fluid -->
</div>
