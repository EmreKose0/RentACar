@model CreateBannerDto

@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Bilgisi Girişi</h4>
                        <form method="post" asp-action="CreateBanner">

                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDesc" asp-for="Description" placeholder="Açıklama Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklama Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Video URL</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Youtube Embed linki Girişi Yapınız..">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-body-->
        </div>

    </div> <!-- container-fluid -->
</div>
