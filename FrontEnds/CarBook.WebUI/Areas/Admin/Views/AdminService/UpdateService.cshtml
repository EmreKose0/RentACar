@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Service Bilgisi Güncelle</h4>
                        <form method="post" asp-action="UpdateService">
                            <input type="hidden" asp-for="ServiceId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Hizmet Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Hizmet Adı Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">Hizmet Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDesc" asp-for="Description" placeholder="Hizmet Açıklama Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcn">Icon-URL</label>
                                <input type="text" class="form-control" id="exampleInputIcn" asp-for="IconUrl" placeholder="Icon URL Girişi Yapınız..">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Hizmet Güncelle</button>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-body-->
        </div>

    </div> <!-- container-fluid -->
</div>

