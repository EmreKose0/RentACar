@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">About Bilgisi Güncelle</h4>
                        <form method="post" asp-action="UpdateAbout">
                            <input type="hidden" asp-for="AboutId" />


                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" placeholder="Açıklama Giriniz"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoImageUrl">Görsel URL</label>
                                <input type="text" class="form-control" id="exampleInputVideoImageUrl" asp-for="ImageUrl" placeholder="Görsel URL Girişi Yapınız..">
                            </div>

                            <button type="submit" class="btn btn-success waves-effect waves-light">Hakkımızda yı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-body-->
        </div>

    </div> <!-- container-fluid -->
</div>

