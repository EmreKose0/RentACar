@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">SocialMedia Bilgisi Güncelle</h4>
                        <form method="post" asp-action="UpdateSocialMedia">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal Medya Adı Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">Url</label>
                                <input type="text" class="form-control" id="exampleInputDesc" asp-for="Url" placeholder="URL Girişi Yapınız..">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcn">Icon-URL</label>
                                <input type="text" class="form-control" id="exampleInputIcn" asp-for="Icon" placeholder="Icon URL Girişi Yapınız..">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Hizmet Güncelle</button>
                        </form>
                    </div>
                </div>
            </div> <!-- end card-body-->
        </div>

    </div> <!-- container-fluid -->
</div>

